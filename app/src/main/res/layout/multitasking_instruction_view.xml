<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textColor="@color/white"
        android:text="Multitasking\ntraining"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nextInstruction"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="44dp"
        android:onClick="onNextInstruction"
        android:text="Next Instruction"
        app:layout_constraintBottom_toTopOf="@+id/trainButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.829"
        app:layout_constraintStart_toEndOf="@+id/lastInstruction" />

    <Button
        android:id="@+id/lastInstruction"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="104dp"
        android:onClick="onLastInstruction"
        android:text="Last Instruction"
        app:layout_constraintBottom_toBottomOf="@+id/trainButton"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/trainButton"
        android:layout_width="263dp"
        android:layout_height="59dp"
        android:layout_marginBottom="76dp"
        android:onClick="onTrain"
        android:text="Train"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/instructionsView"
        android:layout_width="0dp"
        android:layout_height="329dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lastInstruction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:srcCompat="@drawable/info1" />
</androidx.constraintlayout.widget.ConstraintLayout>